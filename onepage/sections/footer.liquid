<style>
  .footer {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    color: white;
    padding: 5rem 0 2rem;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 80%, rgba(231, 76, 60, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(52, 152, 219, 0.1) 0%, transparent 50%),
      url('data:image/svg+xml,<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.05"><circle cx="50" cy="50" r="1.5"/></g></svg>') repeat;
  }

  .footer[data-theme="dark"] {
    background: linear-gradient(135deg, #0d1117 0%, #161b22 50%, #21262d 100%);
    border-top-color: #58a6ff;
  }

  .footer[data-theme="dark"]::before {
    background: 
      radial-gradient(circle at 20% 80%, rgba(88, 166, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 159, 67, 0.1) 0%, transparent 50%),
      url('data:image/svg+xml,<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.03"><circle cx="50" cy="50" r="1.5"/></g></svg>') repeat;
  }

  .footer__container {
    max-width: {{ settings.page_width | default: 1200 }}px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .footer__content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 4rem;
    margin-bottom: 3rem;
    position: relative;
    z-index: 2;
  }

  .footer__section--brand {
    max-width: 300px;
  }

  .footer__logo {
    margin-bottom: 1.5rem;
  }

  .footer__logo-link {
    display: inline-block;
    text-decoration: none;
  }

  .footer__logo-img {
    max-height: 50px;
    width: auto;
    filter: brightness(0) invert(1);
    transition: transform 0.3s ease;
  }

  .footer__logo-img:hover {
    transform: scale(1.05);
  }

  .footer__brand-name {
    font-size: 2.4rem;
    font-weight: 800;
    color: white;
    text-decoration: none;
    background: linear-gradient(135deg, #e74c3c 0%, #f39c12 50%, #3498db 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transition: all 0.3s ease;
    text-shadow: 0 0 20px rgba(231, 76, 60, 0.3);
  }

  .footer__brand-name:hover {
    transform: scale(1.05);
    filter: drop-shadow(0 0 10px rgba(231, 76, 60, 0.5));
  }

  .footer__description {
    font-size: 1.4rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
  }

  .footer__social {
    display: flex;
    gap: 1rem;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    background: rgba(231, 76, 60, 0.2);
    color: white;
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(231, 76, 60, 0.3);
  }

  .footer__social-link:hover {
    background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
    border-color: rgba(231, 76, 60, 0.6);
  }

  .footer__section-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
    margin-bottom: 2rem;
    position: relative;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .footer__section-title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 40px;
    height: 3px;
    background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
    border-radius: 2px;
    box-shadow: 0 2px 8px rgba(231, 76, 60, 0.4);
  }

  .footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__links li {
    margin-bottom: 1rem;
  }

  .footer__link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1.4rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer__link::before {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
    transition: width 0.3s ease;
    box-shadow: 0 1px 4px rgba(231, 76, 60, 0.4);
  }

  .footer__link:hover {
    color: white;
    transform: translateX(5px);
  }

  .footer__link:hover::before {
    width: 100%;
  }

  .footer__newsletter-text {
    font-size: 1.4rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .footer__newsletter-form {
    margin-bottom: 2rem;
  }

  .footer__newsletter-input-group {
    display: flex;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2.5rem;
    overflow: hidden;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(231, 76, 60, 0.3);
    transition: all 0.3s ease;
  }

  .footer__newsletter-input-group:focus-within {
    border-color: rgba(231, 76, 60, 0.6);
    box-shadow: 0 0 20px rgba(231, 76, 60, 0.2);
  }

  .footer__newsletter-input {
    flex: 1;
    padding: 1.2rem 1.5rem;
    border: none;
    background: transparent;
    color: white;
    font-size: 1.4rem;
    outline: none;
  }

  .footer__newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .footer__newsletter-button {
    padding: 1.2rem 1.5rem;
    background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
    color: white;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
  }

  .footer__newsletter-button:hover {
    background: linear-gradient(135deg, #c0392b 0%, #e67e22 100%);
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
  }

  .footer__bottom {
    border-top: 1px solid rgba(231, 76, 60, 0.3);
    padding-top: 2rem;
    position: relative;
    z-index: 2;
  }

  .footer__bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .footer__copyright p {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .footer__payment {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer__payment-label {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .footer__payment-icons {
    display: flex;
    gap: 0.8rem;
  }

  .footer__payment-icons svg {
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.3s ease;
  }

  .footer__payment-icons svg:hover {
    color: white;
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .footer__content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer__section--brand {
      max-width: none;
      text-align: center;
    }

    .footer__social {
      justify-content: center;
    }

    .footer__bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer__newsletter-input-group {
      flex-direction: column;
      border-radius: 1rem;
    }

    .footer__newsletter-input {
      border-radius: 1rem 1rem 0 0;
    }

    .footer__newsletter-button {
      border-radius: 0 0 1rem 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const footer = document.querySelector('.footer');
    const body = document.body;
    
    // Apply theme to footer
    const savedTheme = localStorage.getItem('theme') || 'light';
    if (savedTheme === 'dark') {
      footer.setAttribute('data-theme', 'dark');
    }
    
    // Listen for theme changes
    const observer = new MutationObserver(function(mutations) {
      mutations.forEach(function(mutation) {
        if (mutation.type === 'attributes' && mutation.attributeName === 'data-theme') {
          const theme = body.getAttribute('data-theme');
          footer.setAttribute('data-theme', theme);
        }
      });
    });
    
    observer.observe(body, { attributes: true, attributeFilter: ['data-theme'] });
  });
</script>

