<div class="gift-card">
  <div class="gift-card__container">
    <h1 class="gift-card__title">{{ 'gift_cards.issued.title' | t }}</h1>
    
    <div class="gift-card__content">
      <div class="gift-card__image">
        {%- if gift_card.enabled -%}
          <img src="{{ 'gift-card/card.jpg' | shopify_asset_url }}" alt="Gift card illustration" class="gift-card__image-img" width="400" height="250">
        {%- else -%}
          <div class="gift-card__placeholder">
            <svg width="200" height="200" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="200" height="200" fill="#f3f3f3"/>
              <path d="M50 50H150V150H50V50Z" stroke="#ccc" stroke-width="2" fill="none"/>
              <path d="M60 60H140V140H60V60Z" fill="#ddd"/>
            </svg>
          </div>
        {%- endif -%}
      </div>
      
      <div class="gift-card__details">
        <h2 class="gift-card__value">{{ gift_card.balance | money }}</h2>
        <p class="gift-card__code">{{ gift_card.code | format_code }}</p>
        
        <div class="gift-card__actions">
          <button class="gift-card__print button button--primary" onclick="window.print();">
            {{ 'gift_cards.issued.print_gift_card' | t }}
          </button>
        </div>
        
        {%- if gift_card.expired != true and gift_card.enabled -%}
          <div class="gift-card__info">
            <p class="gift-card__expiry">
              {%- if gift_card.expires_on -%}
                {{ 'gift_cards.issued.expires' | t: expiry: gift_card.expires_on | date: format: 'date' }}
              {%- endif -%}
            </p>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<style>
  .gift-card {
    padding: 4rem 0;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }
  
  .gift-card__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .gift-card__title {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-base-text);
  }
  
  .gift-card__content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .gift-card__image {
    text-align: center;
  }
  
  .gift-card__image-img {
    max-width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }
  
  .gift-card__placeholder {
    width: 100%;
    height: 300px;
    background: #f8f9fa;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px dashed #ddd;
  }
  
  .gift-card__details {
    text-align: center;
  }
  
  .gift-card__value {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-base-accent-1);
    margin-bottom: 1rem;
  }
  
  .gift-card__code {
    font-size: 1.5rem;
    font-family: monospace;
    background: #f8f9fa;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
    border: 2px dashed #ddd;
  }
  
  .gift-card__actions {
    margin-bottom: 2rem;
  }
  
  .gift-card__print {
    padding: 1rem 2rem;
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: 0.5rem;
    background: var(--color-base-accent-1);
    color: white;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .gift-card__print:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
  
  .gift-card__info {
    font-size: 1rem;
    color: #666;
  }
  
  @media (max-width: 768px) {
    .gift-card__content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .gift-card__title {
      font-size: 2.5rem;
    }
    
    .gift-card__value {
      font-size: 2.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Gift Card",
  "tag": "section",
  "class": "section",
  "settings": []
}
{% endschema %}
