<div class="index-template">
  {%- comment -%} Sortable Homepage Sections {%- endcomment -%}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'hero_banner' -%}
        <div class="hero-banner hero-banner--{{ block.settings.hero_banner_size | default: 'medium' }}" {{ block.shopify_attributes }}>
          <div class="hero-banner__container">
            <div class="hero-banner__content">
              <h1 class="hero-banner__title">{{ block.settings.hero_title | default: 'Welcome to Our Store' }}</h1>
              <p class="hero-banner__subtitle">{{ block.settings.hero_subtitle | default: 'Discover amazing products at great prices' }}</p>
              <div class="hero-banner__actions">
                <a href="{{ block.settings.hero_button_url | default: routes.all_products_collection_url }}" class="button button--primary button--large">
                  {{ block.settings.hero_button_text | default: 'Shop Now' }}
                </a>
                <a href="{{ block.settings.hero_secondary_button_url | default: '/pages/about' }}" class="button button--secondary button--large">
                  {{ block.settings.hero_secondary_button_text | default: 'Learn More' }}
                </a>
              </div>
            </div>
            <div class="hero-banner__media">
              {%- if block.settings.hero_image != blank -%}
                {{ block.settings.hero_image | image_url: width: 800 | image_tag: 
                  alt: block.settings.hero_image.alt | default: block.settings.hero_title,
                  class: 'hero-banner__img'
                }}
              {%- else -%}
                <div class="hero-banner__placeholder">
                  <svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect width="400" height="300" fill="currentColor" opacity="0.1"/>
                    <path d="M100 50H300V250H100V50Z" stroke="currentColor" stroke-width="2" fill="none"/>
                    <path d="M120 80H280V220H120V80Z" fill="currentColor" opacity="0.2"/>
                  </svg>
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>

      {%- when 'featured_product' -%}
        <div class="featured-product-section" {{ block.shopify_attributes }}>
          <div class="featured-product-section__container">
            <div class="featured-product-section__header">
              <h2 class="featured-product-section__title">{{ block.settings.featured_product_title | default: 'Featured Product' }}</h2>
              <p class="featured-product-section__subtitle">{{ block.settings.featured_product_subtitle | default: 'Check out our most popular item' }}</p>
            </div>
            
            {%- if block.settings.featured_product != blank -%}
              <div class="featured-product-section__product">
                <div class="featured-product-section__product-card">
                  <div class="featured-product-section__product-image">
                    {%- if block.settings.featured_product.featured_media -%}
                      <a href="{{ block.settings.featured_product.url }}">
                        {{ block.settings.featured_product.featured_media | image_url: width: 500 | image_tag: 
                          alt: block.settings.featured_product.featured_media.alt | default: block.settings.featured_product.title,
                          class: 'featured-product-section__image'
                        }}
                      </a>
                    {%- else -%}
                      <div class="featured-product-section__placeholder">
                        <svg width="300" height="300" viewBox="0 0 300 300" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <rect width="300" height="300" fill="currentColor" opacity="0.1"/>
                          <path d="M75 75H225V225H75V75Z" stroke="currentColor" stroke-width="2" fill="none"/>
                        </svg>
                      </div>
                    {%- endif -%}
                  </div>

                  <div class="featured-product-section__product-info">
                    <h3 class="featured-product-section__product-title">
                      <a href="{{ block.settings.featured_product.url }}">{{ block.settings.featured_product.title }}</a>
                    </h3>
                    
                    <div class="featured-product-section__product-price">
                      {%- if block.settings.featured_product.compare_at_price > block.settings.featured_product.price -%}
                        <span class="price price--compare">{{ block.settings.featured_product.compare_at_price | money }}</span>
                        <span class="price price--sale">{{ block.settings.featured_product.price | money }}</span>
                      {%- else -%}
                        <span class="price">{{ block.settings.featured_product.price | money }}</span>
                      {%- endif -%}
                    </div>

                    <div class="featured-product-section__product-actions">
                      <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="featured-product-section__add-to-cart">
                        <input type="hidden" name="id" value="{{ block.settings.featured_product.selected_or_first_available_variant.id }}">
                        <button type="submit" name="add" class="button button--primary">
                          Buy Now
                        </button>
                      </form>
                      <a href="{{ block.settings.featured_product.url }}" class="button button--secondary">
                        View Details
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            {%- else -%}
              <div class="featured-product-section__no-product">
                <h3>No Featured Product</h3>
                <p>Please select a product in the theme editor to display it here.</p>
                <div class="featured-product-section__instructions">
                  <h4>How to add a featured product:</h4>
                  <ol>
                    <li>Go to Online Store > Themes</li>
                    <li>Click Customize on your OnePage theme</li>
                    <li>Find the "Theme" section in the left sidebar</li>
                    <li>Scroll to "Featured Product" section</li>
                    <li>Select a product from the "Featured product" dropdown</li>
                    <li>Save your changes</li>
                  </ol>
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>

      {%- when 'video_section' -%}
        <div class="video-section" {{ block.shopify_attributes }}>
          <div class="video-section__container">
            <div class="video-section__header">
              <h2 class="video-section__title">{{ block.settings.video_title | default: 'Watch Our Story' }}</h2>
              <p class="video-section__subtitle">{{ block.settings.video_subtitle | default: 'See what makes us different' }}</p>
            </div>
            
            <div class="video-section__content">
              <div class="video-section__video-container">
                {%- if block.settings.video_url != blank -%}
                  {%- if block.settings.video_url contains 'youtube.com' or block.settings.video_url contains 'youtu.be' -%}
                  {%- assign video_id = block.settings.video_url | split: 'v=' | last | split: '&' | first -%}
                  {%- if block.settings.video_url contains 'youtu.be' -%}
                    {%- assign video_id = block.settings.video_url | split: 'youtu.be/' | last | split: '?' | first -%}
                  {%- endif -%}
                  {%- if video_id != blank -%}
                    <iframe 
                      class="video-section__video" 
                      src="https://www.youtube.com/embed/{{ video_id }}?autoplay={{ block.settings.video_autoplay | default: false }}&mute={{ block.settings.video_mute | default: true }}&loop={{ block.settings.video_loop | default: true }}&controls={{ block.settings.video_controls | default: true }}&showinfo=0&rel=0"
                      frameborder="0" 
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                      allowfullscreen>
                    </iframe>
                  {%- else -%}
                    <div class="video-section__error">
                      <p>Invalid YouTube URL. Please check the video URL format.</p>
                    </div>
                  {%- endif -%}
                {%- elsif block.settings.video_url contains 'vimeo.com' -%}
                  {%- assign video_id = block.settings.video_url | split: 'vimeo.com/' | last | split: '?' | first -%}
                  {%- if video_id != blank -%}
                    <iframe 
                      class="video-section__video" 
                      src="https://player.vimeo.com/video/{{ video_id }}?autoplay={{ block.settings.video_autoplay | default: false }}&muted={{ block.settings.video_mute | default: true }}&loop={{ block.settings.video_loop | default: true }}&controls={{ block.settings.video_controls | default: true }}&title=0&byline=0&portrait=0"
                      frameborder="0" 
                      allow="autoplay; fullscreen; picture-in-picture" 
                      allowfullscreen>
                    </iframe>
                  {%- else -%}
                    <div class="video-section__error">
                      <p>Invalid Vimeo URL. Please check the video URL format.</p>
                    </div>
                  {%- endif -%}
                {%- else -%}
                  <div class="video-section__error">
                    <p>Unsupported video platform. Please use YouTube or Vimeo.</p>
                  </div>
                  {%- endif -%}
                {%- else -%}
                  <div class="video-section__placeholder">
                    <svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <rect width="400" height="300" fill="currentColor" opacity="0.1"/>
                      <path d="M100 50H300V250H100V50Z" stroke="currentColor" stroke-width="2" fill="none"/>
                      <path d="M120 80H280V220H120V80Z" fill="currentColor" opacity="0.2"/>
                      <circle cx="200" cy="150" r="30" fill="currentColor" opacity="0.6"/>
                      <path d="M185 150L200 165L215 150" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <p>Add a video URL in the theme customizer to display your video here.</p>
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>

      {%- when 'features_grid' -%}
        <div class="features-grid" {{ block.shopify_attributes }}>
          <div class="features-grid__container">
            <div class="features-grid__header">
              <h2 class="features-grid__title">{{ settings.features_title | default: 'Why Choose Us' }}</h2>
              <p class="features-grid__subtitle">{{ settings.features_subtitle | default: 'We provide exceptional service and quality products' }}</p>
              {%- assign feature_blocks = section.blocks | where: 'type', 'feature' -%}
              {%- unless feature_blocks.size > 0 -%}
              <div class="features-grid__help">
                <p><strong>💡 How to customize:</strong> Go to Theme Customize > Theme Settings > Features Section to edit the title and subtitle. Add features by going to Theme Customize > Homepage > Features Grid section.</p>
              </div>
              {%- endunless -%}
            </div>
            
            <div class="features-grid__grid">
              {%- for feature_block in section.blocks -%}
                {%- if feature_block.type == 'feature' -%}
                  <div class="features-grid__item" {{ feature_block.shopify_attributes }}>
                    <div class="features-grid__icon">
                      {%- if feature_block.settings.icon != blank -%}
                        {{ feature_block.settings.icon | image_url: width: 80 | image_tag: 
                          alt: feature_block.settings.icon.alt | default: feature_block.settings.title,
                          class: 'features-grid__icon-img'
                        }}
                      {%- else -%}
                        <div class="features-grid__icon-placeholder">
                          <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="30" cy="30" r="25" fill="currentColor" opacity="0.1"/>
                            <path d="M30 15L35 25H45L37 32L40 42L30 35L20 42L23 32L15 25H25L30 15Z" fill="currentColor"/>
                          </svg>
                        </div>
                      {%- endif -%}
                    </div>
                    <h3 class="features-grid__item-title">{{ feature_block.settings.title | default: 'Feature Title' }}</h3>
                    <p class="features-grid__item-description">{{ feature_block.settings.description | default: 'Feature description goes here' }}</p>
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
        </div>

      {%- when 'testimonials' -%}
        <div class="testimonials" {{ block.shopify_attributes }}>
          <div class="testimonials__container">
            <div class="testimonials__header">
              <h2 class="testimonials__title">{{ section.settings.testimonials_title | default: 'What Our Customers Say' }}</h2>
              <p class="testimonials__subtitle">{{ section.settings.testimonials_subtitle | default: "Don't just take our word for it" }}</p>
              {%- assign testimonial_blocks = section.blocks | where: 'type', 'testimonial' -%}
              {%- unless testimonial_blocks.size > 0 -%}
              <div class="testimonials__help">
                <p><strong>💡 How to customize:</strong> Go to Theme Customize > Theme Settings > Testimonials Section to edit the title and subtitle. Add customer testimonials by going to Theme Customize > Homepage > Testimonials section.</p>
              </div>
              {%- endunless -%}
            </div>
            
            <div class="testimonials__grid">
              {%- for testimonial_block in section.blocks -%}
                {%- if testimonial_block.type == 'testimonial' -%}
                  <div class="testimonials__item" {{ testimonial_block.shopify_attributes }}>
                    <div class="testimonials__content">
                      <div class="testimonials__quote">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M14.017 21V13.609C14.017 10.931 15.115 8.804 17.312 7.227C19.509 5.65 22.017 4.911 24.836 5.011V8.688C22.836 8.688 21.312 9.25 20.264 10.375C19.216 11.5 18.692 13.109 18.692 15.203V21H14.017ZM0 21V13.609C0 10.931 1.098 8.804 3.295 7.227C5.492 5.65 8 4.911 10.819 5.011V8.688C8.819 8.688 7.295 9.25 6.247 10.375C5.199 11.5 4.675 13.109 4.675 15.203V21H0Z" fill="currentColor" opacity="0.1"/>
                        </svg>
                      </div>
                      <p class="testimonials__text">{{ testimonial_block.settings.text | default: 'This is an amazing product! I highly recommend it to everyone.' }}</p>
                      <div class="testimonials__rating">
                        {%- for i in (1..5) -%}
                          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z" fill="currentColor"/>
                          </svg>
                        {%- endfor -%}
                      </div>
                    </div>
                    <div class="testimonials__author">
                      {%- if testimonial_block.settings.avatar != blank -%}
                        <div class="testimonials__avatar">
                          {{ testimonial_block.settings.avatar | image_url: width: 60 | image_tag: 
                            alt: testimonial_block.settings.name | default: 'Customer',
                            class: 'testimonials__avatar-img'
                          }}
                        </div>
                      {%- else -%}
                        <div class="testimonials__avatar-placeholder">
                          <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="30" cy="30" r="30" fill="currentColor" opacity="0.1"/>
                            <path d="M30 15C35.5228 15 40 19.4772 40 25C40 30.5228 35.5228 35 30 35C24.4772 35 20 30.5228 20 25C20 19.4772 24.4772 15 30 15Z" fill="currentColor" opacity="0.6"/>
                            <path d="M15 45C15 37.268 21.268 31 29 31H31C38.732 31 45 37.268 45 45V50H15V45Z" fill="currentColor" opacity="0.6"/>
                          </svg>
                        </div>
                      {%- endif -%}
                      <div class="testimonials__author-info">
                        <h4 class="testimonials__name">{{ testimonial_block.settings.name | default: 'John Doe' }}</h4>
                        <p class="testimonials__role">{{ testimonial_block.settings.role | default: 'Verified Customer' }}</p>
                      </div>
                    </div>
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
        </div>

      {%- when 'faq_section' -%}
        <div class="faq-section" {{ block.shopify_attributes }}>
          <div class="faq-section__container">
            <div class="faq-section__header">
              <h2 class="faq-section__title">{{ settings.faq_title | default: 'Frequently Asked Questions' }}</h2>
              <p class="faq-section__subtitle">{{ settings.faq_subtitle | default: 'Find answers to common questions' }}</p>
              {%- assign faq_blocks = section.blocks | where: 'type', 'faq' -%}
              {%- unless faq_blocks.size > 0 -%}
              <div class="faq-section__help">
                <p><strong>💡 How to customize:</strong> Go to Theme Customize > Theme Settings > FAQ Section to edit the title and subtitle. Add FAQ items by going to Theme Customize > Homepage > FAQ Section.</p>
              </div>
              {%- endunless -%}
            </div>
            
            <div class="faq-section__content">
              {%- for faq_block in section.blocks -%}
                {%- if faq_block.type == 'faq' -%}
                  <div class="faq-item" {{ faq_block.shopify_attributes }}>
                    <button class="faq-item__question" type="button">
                      <span class="faq-item__question-text">{{ faq_block.settings.question | default: 'How can I track my order?' }}</span>
                      <span class="faq-item__icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </span>
                    </button>
                    <div class="faq-item__answer">
                      <div class="faq-item__answer-content">
                        {{ faq_block.settings.answer | default: 'You can track your order by logging into your account and checking the order status, or by using the tracking number sent to your email.' }}
                      </div>
                    </div>
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
        </div>

      {%- when 'cta_section' -%}
        <div class="cta-section" {{ block.shopify_attributes }}>
          <div class="cta-section__container">
            <div class="cta-section__content">
              <h2 class="cta-section__title">{{ block.settings.cta_title | default: 'Ready to Get Started?' }}</h2>
              <p class="cta-section__subtitle">{{ block.settings.cta_subtitle | default: 'Join thousands of satisfied customers and discover amazing products today.' }}</p>
              <div class="cta-section__actions">
                <a href="{{ block.settings.cta_button_url | default: routes.all_products_collection_url }}" class="button button--primary button--large">
                  {{ block.settings.cta_button_text | default: 'Shop Now' }}
                </a>
                <a href="{{ block.settings.cta_secondary_button_url | default: '/pages/contact' }}" class="button button--secondary button--large">
                  {{ block.settings.cta_secondary_button_text | default: 'Contact Us' }}
                </a>
              </div>
            </div>
          </div>
        </div>
    {%- endcase -%}
  {%- endfor -%}

</div>

<style>
  .hero-banner {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-banner.hero-banner--small {
    padding: 3rem 0 !important;
    min-height: 400px !important;
  }

  .hero-banner.hero-banner--medium {
    padding: 6rem 0 !important;
    min-height: 500px !important;
  }

  .hero-banner.hero-banner--large {
    padding: 8rem 0 !important;
    min-height: 600px !important;
  }

  .hero-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.05"><circle cx="30" cy="30" r="4"/></g></svg>') repeat;
    animation: float 20s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .hero-banner__container {
    max-width: {{ settings.page_width | default: 1200 }}px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-banner__content {
    color: white;
  }

  .hero-banner__title {
    font-size: 4.5rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
  }

  .hero-banner__subtitle {
    font-size: 1.8rem;
    margin-bottom: 3rem;
    opacity: 0.9;
    line-height: 1.6;
  }

  .hero-banner__actions {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .hero-banner__media {
    position: relative;
    max-width: 500px;
    margin: 0 auto;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-banner__video-container {
    position: relative;
    width: 100%;
    height: 350px;
    border-radius: 2rem;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    transition: transform 0.3s ease;
  }

  .hero-banner__video-container:hover {
    transform: scale(1.02);
  }

  .hero-banner__video {
    width: 100%;
    height: 100%;
    border: none;
    border-radius: 2rem;
  }

  .hero-banner__video-error {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    text-align: center;
    padding: 2rem;
    border-radius: 2rem;
  }

  .hero-banner__video-error p {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
  }

  .hero-banner__img {
    width: 100%;
    height: 400px;
    max-width: 500px;
    object-fit: cover;
    border-radius: 2rem;
    box-shadow: 
      0 25px 50px rgba(0,0,0,0.4),
      0 0 0 1px rgba(255, 255, 255, 0.1);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 2px solid rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
    background: transparent;
  }

  .hero-banner__img::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
    border-radius: 2rem;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .hero-banner__img:hover {
    transform: scale(1.05) translateY(-8px) rotateX(5deg);
    box-shadow: 
      0 35px 70px rgba(0,0,0,0.6),
      0 0 0 1px rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .hero-banner__img:hover::before {
    opacity: 0.8;
  }

  .hero-banner__placeholder {
    width: 100%;
    height: 400px;
    background: rgba(255,255,255,0.1);
    border-radius: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
    color: white;
    border: 2px dashed rgba(255, 255, 255, 0.3);
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }

  .featured-product-section {
    padding: 6rem 0;
    background: var(--color-background);
    transition: background-color 0.3s ease;
  }

  .featured-product-section__container {
    max-width: {{ settings.page_width | default: 1200 }}px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .featured-product-section__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .featured-product-section__title {
    font-size: 3.5rem;
    font-weight: 800;
    color: var(--color-heading);
    margin-bottom: 1.5rem;
    transition: color 0.3s ease;
  }

  .featured-product-section__subtitle {
    font-size: 1.5rem;
    color: var(--color-text);
    max-width: 600px;
    margin: 0 auto;
    transition: color 0.3s ease;
  }

  .featured-product-section__product {
    display: flex;
    justify-content: center;
  }

  .featured-product-section__product-card {
