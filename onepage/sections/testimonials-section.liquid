<section class="testimonials-section color-{{ section.settings.color_scheme }} gradient">
  <div class="testimonials-section__container">
    {%- if section.settings.heading != blank -%}
      <div class="testimonials-section__header">
        <h2 class="testimonials-section__title">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <p class="testimonials-section__subtitle">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="testimonials-section__content">
      <div class="testimonials-section__slider" id="testimonials-slider-{{ section.id }}">
        {%- for block in section.blocks -%}
          <div class="testimonials-section__slide" {{ block.shopify_attributes }}>
            <div class="testimonials-section__card">
              <div class="testimonials-section__rating">
                {%- for i in (1..5) -%}
                  <span class="testimonials-section__star">★</span>
                {%- endfor -%}
              </div>
              
              <blockquote class="testimonials-section__quote">
                "{{ block.settings.testimonial }}"
              </blockquote>
              
              <div class="testimonials-section__author">
                {%- if block.settings.author_image != blank -%}
                  <div class="testimonials-section__author-image">
                    {{ block.settings.author_image | image_url: width: 60 | image_tag: alt: block.settings.author_name }}
                  </div>
                {%- endif -%}
                <div class="testimonials-section__author-info">
                  <div class="testimonials-section__author-name">{{ block.settings.author_name }}</div>
                  {%- if block.settings.author_title != blank -%}
                    <div class="testimonials-section__author-title">{{ block.settings.author_title }}</div>
                  {%- endif -%}
                  {%- if block.settings.verified_badge -%}
                    <div class="testimonials-section__verified">✓ Verified Purchase</div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- if section.blocks.size > 1 -%}
        <div class="testimonials-section__navigation">
          <button class="testimonials-section__nav testimonials-section__nav--prev" aria-label="Previous testimonial">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button class="testimonials-section__nav testimonials-section__nav--next" aria-label="Next testimonial">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.5 5L12.5 10L7.5 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: 6rem 0;
  }

  .testimonials-section__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .testimonials-section__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .testimonials-section__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-base-text);
  }

  .testimonials-section__subtitle {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }

  .testimonials-section__content {
    position: relative;
  }

  .testimonials-section__slider {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 2rem;
    padding: 1rem 0;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .testimonials-section__slider::-webkit-scrollbar {
    display: none;
  }

  .testimonials-section__slide {
    flex: 0 0 350px;
    scroll-snap-align: start;
  }

  .testimonials-section__card {
    background: white;
    padding: 2.5rem;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .testimonials-section__rating {
    display: flex;
    gap: 0.2rem;
    margin-bottom: 1.5rem;
  }

  .testimonials-section__star {
    color: #ffc107;
    font-size: 1.2rem;
  }

  .testimonials-section__quote {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #333;
    margin: 0 0 2rem 0;
    font-style: italic;
    flex: 1;
  }

  .testimonials-section__author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .testimonials-section__author-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .testimonials-section__author-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-section__author-info {
    flex: 1;
  }

  .testimonials-section__author-name {
    font-weight: 600;
    color: var(--color-base-text);
    margin-bottom: 0.2rem;
  }

  .testimonials-section__author-title {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.2rem;
  }

  .testimonials-section__verified {
    font-size: 0.8rem;
    color: #28a745;
    font-weight: 500;
  }

  .testimonials-section__navigation {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .testimonials-section__nav {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 2px solid var(--color-base-accent-1);
    background: white;
    color: var(--color-base-accent-1);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .testimonials-section__nav:hover {
    background: var(--color-base-accent-1);
    color: white;
  }

  .testimonials-section__nav:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @media (max-width: 768px) {
    .testimonials-section__slide {
      flex: 0 0 280px;
    }

    .testimonials-section__card {
      padding: 2rem;
    }

    .testimonials-section__title {
      font-size: 2.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.getElementById('testimonials-slider-{{ section.id }}');
    const prevBtn = slider?.parentElement.querySelector('.testimonials-section__nav--prev');
    const nextBtn = slider?.parentElement.querySelector('.testimonials-section__nav--next');
    
    if (!slider || !prevBtn || !nextBtn) return;

    let currentIndex = 0;
    const slides = slider.querySelectorAll('.testimonials-section__slide');
    const totalSlides = slides.length;

    function updateNavigation() {
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= totalSlides - 1;
    }

    function scrollToSlide(index) {
      const slideWidth = slides[0].offsetWidth + 32; // 32px gap
      slider.scrollTo({
        left: index * slideWidth,
        behavior: 'smooth'
      });
    }

    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        scrollToSlide(currentIndex);
        updateNavigation();
      }
    });

    nextBtn.addEventListener('click', () => {
      if (currentIndex < totalSlides - 1) {
        currentIndex++;
        scrollToSlide(currentIndex);
        updateNavigation();
      }
    });

    // Update navigation on scroll
    slider.addEventListener('scroll', () => {
      const slideWidth = slides[0].offsetWidth + 32;
      currentIndex = Math.round(slider.scrollLeft / slideWidth);
      updateNavigation();
    });

    // Initialize
    updateNavigation();
  });
</script>

